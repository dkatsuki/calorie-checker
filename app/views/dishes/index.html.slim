javascript:
  window.addEventListener('turbo:load', () => {
    const submit = () => { document.querySelector('.search_form').submit() };

    const genreCheckBoxes = document.querySelectorAll('.search_form input[name="genre[]"]');
    genreCheckBoxes.forEach(element => element.onchange = submit )

    const sortKeySelectBox = document.querySelector('.search_form select[name="sort[key]"]');
    sortKeySelectBox.onchange = submit;

    const sortOrderSelectBox = document.querySelector('.search_form select[name="sort[order]"]');
    sortOrderSelectBox.onchange = submit;
  })
