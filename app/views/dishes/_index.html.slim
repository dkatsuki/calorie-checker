div.dishes_index
  = form_with url: '/dishes', method: :get, local: true, class: 'search_form' do |f|
    = f.hidden_field :limit, value: 4
    div.search-word-form.justify-content_flex-start
      = f.text_field :name, value: (params[:name]), placeholder: '食材や料理の名前で検索'
      = button_tag type: :submit do
        = image_tag "magnify-grass-button.svg"
    div
      div.genre-checkboxes.display_flex.justify-content_flex-start
        - @model.genres.keys.each do |genre|
          div
            = f.label genre
            = check_box_tag("genre[]", genre, (params[:genre].present? ? params[:genre].include?(genre) : true))
      div.sort-selectboxes
        = f.select "sort[key]", @model.nutrition_name_list.invert, {selected: params&.[](:sort)&.[](:key)}
        = f.select "sort[order]", {'高い順' => :desc, '低い順' => :asc}, {selected: params&.[](:sort)&.[](:order)}
  div.records_container
    - @records.each do |record|
      a.dish_thumbnail_box href="/dishes/#{record.id}" target="_blank"
        div.thumbnail_image_box
          = image_tag record.image_source, alt: record.name
          = image_tag 'arrow-sircled-button.svg', alt: 'button'
        div
          div.カロリー枠
            p = "#{record.calorie}kcal"
          div
            p = record.name
  div.pagination