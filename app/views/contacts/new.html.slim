sass:
  #top_wrapper
    div.error_messages_box
      width: 40%;
    div.header_point
      margin-bottom: 1rem;
    form
      > input[type="submit"]
        background-color: black;
        color: white;
        width: 20%;
        display: flex;
        justify-content: center;
        align-items: center;
      > div
        width: 100%;
        margin-top: 1rem;
        > div
          width: 100%;
          > input
            width: 40%;
          > textarea
            width: 50%;
            height: 30vh;
    @media (max-width: 768px)
      div.error_messages_box
        width: 100%;
      form
        > input[type="submit"]
          width: 100%;
        > div
          width: 100%;
          > div
            width: 100%;
            > input
              width: 100%;
            > textarea
              width: 98%;
              height: 30vh;
= render 'partials/header'
div#top_wrapper
  div.header_point
    p お問合せ
  = render partial: 'partials/error_messages'
  = form_with url: '/contact', method: :post, local: true do |f|
    div
      div
        = f.label :name, 'お名前'
      div
        = f.text_field :name, value: @name
    div
      div
        = f.label :email, 'メールアドレス'
      div
        = f.email_field :email, value: @email
    div
      divsubject
        = f.label :subject, '件名', value: @subject
      div
        = f.text_field :subject
    div
      div
        = f.label :body, 'お問い合わせ内容', value: @body
      div
        = f.text_area :body
    = f.submit '送信'
= render 'partials/footer'